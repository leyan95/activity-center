.form-container {
    padding: 20rpx;
    display: flex;
    flex-direction: column;
    font-size: 35rpx;
}

.title {
    padding: 10rpx 20rpx;
    border-bottom: solid 1px #b8b8b8;
    margin: 40rpx 20rpx;
}

.type {
    display: flex;
    flex-direction: row;
    width: auto;
    padding: 10rpx 20rpx;
    border-bottom: solid 1px #b8b8b8;
    margin: 40rpx 20rpx;
    align-items: center;
}

.type .picker {
    flex: 1;
}

.content {
    width: auto;
    padding: 10rpx 20rpx;
    border-bottom: solid 1px #b8b8b8;
    margin: 40rpx 20rpx;
}

.time {
    display: flex;
    flex-direction: row;
    padding: 10rpx 20rpx;
    border-bottom: solid 1px #b8b8b8;
    margin: 40rpx 20rpx;
    align-items: center;
}

.time date-time-picker {
    flex: 1;
}